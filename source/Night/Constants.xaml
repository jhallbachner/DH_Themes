<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Int32 x:Key="DuplicateHider_MaxNumberOfIcons">4</sys:Int32>
    <sys:Int32 x:Key="DuplicateHider_MaxNumberOfIcons1">8</sys:Int32>
    <sys:Int32 x:Key="DuplicateHider_MaxNumberOfIcons2">8</sys:Int32>

    <Visibility x:Key="TitleVisibility">Visible</Visibility>
    <sys:Double x:Key="DetailsViewImageHeight">300</sys:Double>
    <Visibility x:Key="TopSourceSelectorVisibility">Visible</Visibility>
    <sys:Double x:Key="DetailsViewMaxContentWidth">1024</sys:Double>
    <sys:Boolean x:Key="EnableCoverZoom">False</sys:Boolean>
    <sys:Boolean x:Key="UseFakeShadowInGridView">True</sys:Boolean>
    <sys:Double x:Key="DropShadowOpacityGrid">1</sys:Double>
    <sys:Double x:Key="PlaybuttonBarOpacity">0.8</sys:Double>
    <sys:Double x:Key="BackgroundOverlayOpacity">1</sys:Double>
    <sys:Boolean x:Key="ShowPanels">True</sys:Boolean>

    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSize">14</sys:Double>
    <sys:Double x:Key="FontSizeLarge">15</sys:Double>
    <sys:Double x:Key="FontSizeLarger">20</sys:Double>
    <sys:Double x:Key="FontSizeLargest">29</sys:Double>
    <FontFamily x:Key="FontFamily">Trebuchet MS</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>
    <Thickness x:Key="PopupBorderThickness">0</Thickness>
    <Thickness x:Key="ControlBorderThickness">0</Thickness>
    <sys:Double x:Key="EllipseBorderThickness">0</sys:Double>
    <CornerRadius x:Key="ControlCornerRadius">5</CornerRadius>
    <Thickness x:Key="SidebarItemPadding">8</Thickness>
    <Thickness x:Key="InputBorderThickness">0,0,0,2</Thickness>
    <CornerRadius x:Key="GridItemCornerRadius">10</CornerRadius>
    <CornerRadius x:Key="InputCornerRadius">5</CornerRadius>

    <Color x:Key="BlackColor">#FF000000</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    <Color x:Key="TextColor">#f2f2f2</Color>
    <Color x:Key="TextColorAlt">#f2f2f2</Color>
    <Color x:Key="TextColorDarker">#a3a3a3</Color>
    <Color x:Key="TextColorDark">#FF000000</Color>
    <Color x:Key="MainColor">#474747</Color>
    <Color x:Key="MainColorDark">#1C1C1C</Color>
    <Color x:Key="HoverColor">#005252</Color>
    <Color x:Key="GlyphColor">#00CCCC</Color>
    <Color x:Key="HighlightGlyphColor">#007A7A</Color>
    <Color x:Key="PopupBackgroundColor">#171e26</Color>
    <Color x:Key="PopupBorderColor">#00000000</Color>
    <Color x:Key="BackgroundToneColor">#1F1F1F</Color>
    <Color x:Key="GridItemBackgroundColor">#292929</Color>
    <Color x:Key="PanelSeparatorColor">#00000000</Color>
    <Color x:Key="TransparentColor">#00000000</Color>
    <Color x:Key="TransparentPanelColor">#0AFFFFFF</Color>
    <Color x:Key="TransparentButtonColor">#19FFFFFF</Color>
    <Color x:Key="TransparentPlayButtonColor">#4F00CCCC</Color>

    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="Transparent" />
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="TextBrushAlt" Color="{DynamicResource TextColorAlt}" />
    <SolidColorBrush x:Key="TextBrushDarker" Color="{DynamicResource TextColorDarker}" />
    <SolidColorBrush x:Key="TextBrushDark" Color="{DynamicResource TextColorDark}" />
    <SolidColorBrush x:Key="NormalBrush" Color="{DynamicResource MainColor}" />
    <SolidColorBrush x:Key="NormalBrushDark" Color="{DynamicResource MainColorDark}" />
    <SolidColorBrush x:Key="NormalBorderBrush" Color="#553A3A3A" />
    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource HighlightGlyphColor}" />
    <ImageBrush x:Key="GlyphBrush" ImageSource="{ThemeFile 'Images/noise/highlight1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="HighlightGlyphBrush" ImageSource="{ThemeFile 'Images/noise/highlight0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.CachingHint="Cache"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="{DynamicResource PopupBorderColor}" />
    <ImageBrush x:Key="TooltipBackgroundBrush" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="ButtonBackgroundBrush" ImageSource="{ThemeFile 'Images/noise/background2.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.9" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="GridItemBackgroundBrush" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" RenderOptions.CachingHint="Cache"/>
    <SolidColorBrush x:Key="PanelSeparatorBrush" Color="{DynamicResource PanelSeparatorColor}" />
    <ImageBrush x:Key="PopupBackgroundBrush" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" RenderOptions.CachingHint="Cache"/>
    <SolidColorBrush x:Key="TransparentPanelBrush" Color="{DynamicResource TransparentPanelColor}"/>
    <SolidColorBrush x:Key="TransparentButtonBrush" Color="{DynamicResource TransparentButtonColor}"/>
    <SolidColorBrush x:Key="TransparentPlayButtonBrush" Color="{DynamicResource TransparentPlayButtonColor}"/>

    <ImageBrush x:Key="PlayButtonBackgroundBrush" ImageSource="{ThemeFile 'Images/noise/highlight1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.85" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="ProgressbarBrush" ImageSource="{ThemeFile 'Images/progressbar.png'}" Stretch="UniformToFill"/>
    <SolidColorBrush x:Key="PositiveRatingBrush" Color="#78ffa0" />
    <SolidColorBrush x:Key="NegativeRatingBrush" Color="#ff6b6b" />
    <SolidColorBrush x:Key="MixedRatingBrush" Color="#fffca1" />

    <SolidColorBrush x:Key="WarningBrush" Color="#ff6b6b" />

    <LinearGradientBrush x:Key="ExpanderBackgroundBrush" StartPoint="-0.1,0.5" EndPoint="1.2,1" >
        <GradientStop Color="#FF2C3A67" Offset="0"/>
        <GradientStop Color="#002C3A67" Offset="0.7"/>
    </LinearGradientBrush>

    <ImageBrush x:Key="BackgroundImage" ImageSource="{ThemeFile 'Images/Background.png'}" TileMode="None" Stretch="Fill"/>
    
    <!-- Window background brushes -->
    <ImageBrush x:Key="WindowBackgourndBrushTransparent" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache" Opacity="0.85"/>
    <ImageBrush x:Key="WindowBackgourndBrush" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.85" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushOpaque" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushLightOpaque" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushLight" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.7" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushLightTransparent" ImageSource="{ThemeFile 'Images/noise/background0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.476" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushBright" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.85" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushBrighter" ImageSource="{ThemeFile 'Images/noise/background2.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.8" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushBrightest" ImageSource="{ThemeFile 'Images/noise/background3.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.8" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushHighlight" ImageSource="{ThemeFile 'Images/noise/highlight1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.7" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushHighlightHover" ImageSource="{ThemeFile 'Images/noise/highlight0.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache" Opacity="0.7"/>
    <ImageBrush x:Key="WindowBackgourndBrushHighlightFade" ImageSource="{ThemeFile 'Images/noise/highlight1_fade.png'}" Opacity="0.6" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="WindowBackgourndBrushHighlightHoverFade" ImageSource="{ThemeFile 'Images/noise/highlight0_fade.png'}" ViewportUnits="Absolute" RenderOptions.CachingHint="Cache" Opacity="0.6"/>
    
    <!-- Button brushes -->
    <ImageBrush x:Key="ButtonOpaqueBrush" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="ButtonDefaultBrush" ImageSource="{ThemeFile 'Images/noise/background2.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.8" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="ButtonHoveredBrush" ImageSource="{ThemeFile 'Images/noise/background2_5.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.9" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="ButtonSelectedBrush" ImageSource="{ThemeFile 'Images/noise/background3.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.75" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    
    <!-- Input field brushes -->
    <ImageBrush x:Key="InputOpaqueBrush" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="InputDefaultBrush" ImageSource="{ThemeFile 'Images/noise/background1.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.4" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="InputHoveredBrush" ImageSource="{ThemeFile 'Images/noise/background2.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.55" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <ImageBrush x:Key="InputSelectedBrush" ImageSource="{ThemeFile 'Images/noise/background2_5.png'}" TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute" Opacity="0.45" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="InputBorderHighlightBrush" Color="{DynamicResource GlyphColor}"/>
    
    <!-- Drop shadow textures -->
    <ImageBrush x:Key="DropShadowBrushRight" ImageSource="{ThemeFile 'Images/rightDropShadow.png'}"/>
    <ImageBrush x:Key="DropShadowBrushLeft" ImageSource="{ThemeFile 'Images/leftDropShadow.png'}"/>
    <ImageBrush x:Key="DropShadowBrushTop" ImageSource="{ThemeFile 'Images/topDropShadow.png'}"/>
    <ImageBrush x:Key="DropShadowBrushBot" ImageSource="{ThemeFile 'Images/bottomDropShadow.png'}"/>
    <ImageBrush x:Key="DropShadowBrush" ImageSource="{ThemeFile 'Images/dropShadow.png'}"/>
    <ImageBrush x:Key="DropShadowGridItemBrush" ImageSource="{ThemeFile 'Images/dropShadowGridItem.png'}" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache"/>

    <!-- Effects -->
    <sys:Double x:Key="HoverBackgroundOpacity">0.6</sys:Double>
    <DropShadowEffect x:Key="TextDropShadow" BlurRadius="4" ShadowDepth="0" Color="Black" RenderingBias="Quality" Opacity="0.55"/>
    <sys:Double x:Key="DropShadowRadius">22</sys:Double>
    <sys:Double x:Key="DropShadowOpacity">0.75</sys:Double>
    <DropShadowEffect x:Key="DefaultDropShadow" BlurRadius="{DynamicResource DropShadowRadius}" ShadowDepth="0" Color="Black" RenderingBias="Performance" Opacity="{DynamicResource DropShadowOpacity}"/>
    <Thickness x:Key="DropShadowThickness" 
               Left="{StaticResource DropShadowRadius}" 
               Top="{StaticResource DropShadowRadius}" 
               Right="{StaticResource DropShadowRadius}" 
               Bottom="{StaticResource DropShadowRadius}"/>
    
    <!-- Fading Brushes -->
    <LinearGradientBrush x:Key="LeftFadingBrush" StartPoint="0,0" EndPoint="1,0.1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache">
        <GradientStop Color="Black" Offset="0.1"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BottomFadingBrush" StartPoint="0,1" EndPoint="0,0" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache">
        <GradientStop Color="Black" Offset="0.1"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="TopFadingBrush" StartPoint="0,0" EndPoint="0,1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache">
        <GradientStop Color="Black" Offset="0.1"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="CenterFadingBrushHorizontal" StartPoint="0,0" EndPoint="0,1" RenderOptions.BitmapScalingMode="LowQuality" RenderOptions.CachingHint="Cache">
        <GradientStop Color="Transparent" Offset="0"/>
        <GradientStop Color="Black" Offset="0.45"/>
        <GradientStop Color="Black" Offset="0.55"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="CenterFadingBrushVertical" StartPoint="0,0" EndPoint="1,0" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.CachingHint="Cache">
        <GradientStop Color="Transparent" Offset="0"/>
        <GradientStop Color="Black" Offset="0.45"/>
        <GradientStop Color="Black" Offset="0.55"/>
        <GradientStop Color="Transparent" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>